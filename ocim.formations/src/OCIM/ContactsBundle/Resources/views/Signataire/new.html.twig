{% extends '::app.html.twig' %}
{% form_theme form '::form.html.twig' %}

{% block title %}{% endblock %}
{% block titre %}{% endblock %}

{% block body %}
{{form_start(form)}}
<h2>informations sur le signaitaire</h2>
<div class="units-row end">
	<div class="unit-20">{{form_row(form.civilite)}}</div>
	<div class="unit-40">{{form_row(form.prenom)}}</div>
	<div class="unit-40">{{form_row(form.nom)}}</div>
</div>
<div class="units-row">
	<div class="unit-50">{{form_row(form.fonction)}}</div>
	<div class="unit-50">{{form_row(form.mail)}}</div>
</div>
<h2>Adresse et informations sur l 'organisme financeur</h2>
<div class="units-row end">
	<div class="unit-60">
		{{form_row(form.adresse.structure.nom)}}
	</div>
	<div class="unit-40">
		{{form_row(form.adresse.structure.type)}}
	</div>
</div>
<div class="units-row end">
	<div class="unit-50">
		{{form_row(form.adresse.adresse)}}
	</div>
	<div class="unit-50">
		{{form_row(form.adresse.adresseComplement)}}
	</div>
</div>
<div class="units-row end">
	<div class="unit-20">
		{{form_row(form.adresse.cP)}}
	</div>
	<div class="unit-40">
		{{form_row(form.adresse.ville)}}
	</div>
	<div class="unit-40">
		{{form_row(form.adresse.pays)}}
	</div>
</div>

<div class="units-row">
	<div class="unit-100">
	<label> Tags
		{{form_widget(form.adresse.structure.tags)}}
		<div class="forms-desc">Liste de mots clés, séparés par des virgules. Ex : Collectivité territoriale, Association, Société Anonyme</div>
	</label>
	</div>
</div>

<hr/>
<div class="group">
	<div class="left"><a href="{{ path('inscription', { 'idevenement': idevenement }) }}">Retour aux inscriptions</a></div>
 	<div class="right">{{form_widget(form.submit)}}</div>
</div>
{{form_rest(form)}}
{{form_end(form)}}
{% endblock %}