{% extends '::base.html.twig' %}
{% block body %}

<hgroup>
	<h2 class="text-centered" style="font-variant: small-caps; color: #6f6f6f">Web-Inscriptions</h2>
</hgroup>

<form style="margin-top: 30px" method="post" action="{{ path('check') }}" name="connexion" class="forms">
{% if error  %}
	<div class="text-centered error">{{error.message}}</div>
{% endif  %}
    <label>
        <input type="text" value="{{last_username}}"  name="_username" placeholder="Login" class="width-100" autofocus/>
    </label>
    <label>
        <input type="password" name="_password" placeholder="Mot de passe" class="width-100" />
    </label>
    <p>
        <input type="submit" value="Se connecter"  class="btn btn-green width-100"/>
    </p>
	<input type="hidden" name="_target_path" value="{{url('home')}}"/>
</form>

{% endblock %}
